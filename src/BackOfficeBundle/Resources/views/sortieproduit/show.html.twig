{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sortieproduit</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortieProduit.id }}</td>
            </tr>
            <tr>
                <th>Qtt</th>
                <td>{{ sortieProduit.qtt }}</td>
            </tr>
            <tr>
                <th>Prixvente</th>
                <td>{{ sortieProduit.prixVente }}</td>
            </tr>
            <tr>
                <th>Datesortie</th>
                <td>{% if sortieProduit.dateSortie %}{{ sortieProduit.dateSortie|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('backoffice_sortieproduit_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('backoffice_sortieproduit_edit', { 'id': sortieProduit.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
